{
  "name": "cueb",
  "productName": "CueB Controller Software",
  "version": "4.2.0",
  "description": "Theatre CueLight system built on an Arduino",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "install": "electron-rebuild",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icon/scaled/icon.icns --prune=true --out=dist",
    "package-win": "electron-packager . cueb --overwrite --asar=true --platform=win32 --arch=x64 --icon=assets/icon/scaled/icon.ico --prune=true --out=dist --version-string.CompanyName=JBithell --version-string.FileDescription=CueB Show Control --version-string.ProductName=\"CueB Controller Software\"",
    "package-linux": "electron-packager . cueb --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icon/scaled/1024x1024.png --prune=true --out=dist",
    "package-pi": "electron-builder --armv7l --dir"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Jbithell/CueB"
  },
  "author": "JBithell",
  "devDependencies": {
    "electron": "^3.1.1",
    "electron-builder": "^22.9.1",
    "electron-installer-dmg": "^2.0.0",
    "electron-packager": "^13.0.1",
    "electron-rebuild": "^1.8.4"
  },
  "dependencies": {
    "electron-settings": "3.2.0",
    "express": "^4.17.1",
    "fitty": "^2.2.6",
    "jquery": "^3.3.1",
    "osc": "^2.2.0",
    "serialport": "^9.0.6",
    "socket.io": "^3.0.5",
    "uuid": "^3.3.2"
  },
  "optionalDependencies": {
    "windows-build-tools": "^5.1.0"
  },
  "build": {
    "appId": "com.jbithell.CueB",
    "productName": "CueB Controller Software",
    "linux": {
      "target": {
        "target": "appimage",
        "arch": [
          "armv7l"
        ]
      }
    },
    "deb": {},
    "artifactName": "CueB_${version}.${ext}",
    "forceCodeSigning": false
  }
}
