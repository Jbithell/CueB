{
  "name": "cueb",
  "productName": "CueB Controller Software",
  "version": "4.2.0",
  "description": "Theatre CueLight system built on an Arduino",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Jbithell/CueB"
  },
  "author": "JBithell",
  "devDependencies": {
    "electron": "^3.1.1",
    "electron-builder": "^22.9.1",
    "electron-installer-dmg": "^2.0.0",
    "electron-packager": "^13.0.1"
  },
  "dependencies": {
    "electron-settings": "3.2.0",
    "express": "^4.17.1",
    "fitty": "^2.2.6",
    "jquery": "^3.3.1",
    "osc": "^2.2.0",
    "serialport": "^9.0.6",
    "socket.io": "^3.0.5",
    "uuid": "^3.3.2"
  },
  "optionalDependencies": {
    "windows-build-tools": "^5.1.0"
  },
  "build": {
    "appId": "com.jbithell.CueB",
    "productName": "CueB Controller Software",
    "linux": {
      "icon": "assets/icon/scaled/1024x1024.png",
      "target": [
        {
          "target": "appimage",
          "arch": [
            "armv7l"
          ]
        }
      ]
    },
    "mac": {
      "icon": "assets/icon/scaled/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": "x64"
        }
      ]
    },
    "win": {
      "asar": true,
      "icon": "assets/icon/scaled/icon.ico",
      "target": [
        {
          "target": "portable",
          "arch": "x64"
        }
      ]
    },
    "deb": {},
    "artifactName": "${productName} ${os}${arch} ${version}.${ext}",
    "forceCodeSigning": false,
    "publish": null
  }
}
